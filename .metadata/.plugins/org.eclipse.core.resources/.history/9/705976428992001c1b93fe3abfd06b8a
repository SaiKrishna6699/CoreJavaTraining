package ArithmeticCalculator;

import java.util.*;

public class Calculator{
	
	private double addition(double a, double b){
		return a + b;
	}
	
	private double subtraction(double a, double b){
		return a - b;
	}
	
	protected double multiplication(double a, double b){
		return a / b;
	}
		
	
	
	protected double division(double a, double b){
		return a / b;
	}
	
	
	public static void main(String[] args) {
		
		Calculator myCal = new Calculator();
		
		char ch;
		do {
		Scanner s = new Scanner(System.in);
		System.out.println("Enter the First Number: \n");
		double x = s.nextDouble();
		
		System.out.println("Enter the Second Number: \n");
		double y = s.nextDouble();
		
		System.out.println("Enter the operator: \n");
		char operator = s.next().charAt(0);
		
		
		double result = 0;
		
		switch (operator) {
		
		case '+':
			result = myCal.addition(x, y);
			break;
			
		case '-':
			result = myCal.subtraction(x, y);
			break;
			
		
		case '*':
			result = myCal.multiplication(x, y);
			break;
			
		case '/':
			if (y != 0) {
			result = myCal.division(x, y);
			break;}
			else {
				System.out.println("Cannot be divisible by zero.")
			}
			
		default:
			System.out.println("Entered Wrong Input!");
			break;
		
		}

		
		final float result1 = (float)result;
		
		System.out.println((int)x + " " + operator + " " + y + " = " + result1);
		
		System.out.println("Enter the Y for retry and N to exit");
		ch = s.next().charAt(0);
		
		
		}while(ch == 'Y');
		
		if (ch == 'N') {
			System.out.println("Exited");
		}
		
		else {
			System.out.println("Invalid Input!");
			System.out.println("Input should be Y or N");
		}
	
	}
}
